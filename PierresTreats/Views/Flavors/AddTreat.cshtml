@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Assign a treat</h2>

<h4>Assign a treat to this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of flavors", "Index")</p>
<p>@Html.ActionLink("Add a new treat", "Create", "Treats")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>